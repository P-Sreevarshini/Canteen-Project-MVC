@model dotnetapp.ViewModels.ShoppingCartViewModel

<h2>Shopping Cart</h2>

<table>
    <thead>
        <tr>
            <th>Book</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cart.Items)
        {
            <tr>
                <td>@item.Book.Title</td>
                <td>@item.Book.Price</td>
                <td>@item.Quantity</td>
                <td>@(item.Quantity * item.Book.Price)</td>
            </tr>
        }
    </tbody>
</table>

<p>Total: @Model.Cart.Items.Sum(item => item.Quantity * item.Book.Price)</p>
